<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solicitudes del Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/LandingStyles.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg" aria-label="Offcanvas navbar large">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="imgs/logo.png" alt="Logo" width="30" height="30">
            </a>
            <a class="navbar-brand" href="#">Cuidamor</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar2" aria-controls="offcanvasNavbar2">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar2" aria-labelledby="offcanvasNavbar2Label">
                <div class="offcanvas-header">
                    <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-center flex-grow-1 pe-3 components">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Servicios
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/">Enfermería</a></li>
                                <li><a class="dropdown-item" href="/">Cuidado</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Ayuda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Quiero Trabajar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Registrarme">Registrarme</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Iniciar_sesion">Inicio de Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
<h1>hola  </h1>
    <div class="container mt-5">
        <h1>Solicitudes disponibles</h1>
        <h2>Aceptadas</h2>
        <div class="row">
            <% aceptadas.forEach(function(solicitud) { %>
                <div class="col-md-4">
                    <div class="card mb-4 text-white bg-success">
                        <div class="card-body">
                            <h5 class="card-title">Solicitud <%= solicitud.id_sol %></h5>
                            <p class="card-text">Tipo: <%= solicitud.tipo_sol === 'Cuidador' ? 'Cuidador' : 'Enfermero' %></p>
                            <p class="card-text">Descripción: <%= solicitud.des_sol %></p>
                            <p class="card-text">Inicio: <%= new Date(solicitud.fecini_hor).toISOString().slice(0, 10) %></p>
                            <p class="card-text">Estado: <%= solicitud.est_sol %></p>
                            <a href="/solicitudes/detalle/<%= solicitud.id_sol %>" class="btn btn-light">Ver Detalles</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <h2>En Espera</h2>
        <div class="row">
            <% enEspera.forEach(function(solicitud) { %>
                <div class="col-md-4">
                    <div class="card mb-4 text-white bg-warning">
                        <div class="card-body">
                            <h5 class="card-title">Solicitud <%= solicitud.id_sol %></h5>
                            <p class="card-text">Tipo: <%= solicitud.tipo_sol === 'Cuidador' ? 'Cuidador' : 'Enfermero' %></p>
                            <p class="card-text">Descripción: <%= solicitud.des_sol %></p>
                            <p class="card-text">Inicio: <%= new Date(solicitud.fecini_hor).toISOString().slice(0, 10) %></p>
                            <p class="card-text">Estado: <%= solicitud.est_sol %></p>
                            <a href="/solicitudes/detalle/<%= solicitud.id_sol %>" class="btn btn-light">Ver Detalles</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <h2>Finalizadas</h2>
        <div class="row">
            <% FinishHim.forEach(function(solicitud) { %>
                <div class="col-md-4">
                    <div class="card mb-4 text-white bg-danger">
                        <div class="card-body">
                            <h5 class="card-title">Solicitud <%= solicitud.id_sol %></h5>
                            <p class="card-text">Tipo: <%= solicitud.tipo_sol === 'Cuidador' ? 'Cuidador' : 'Enfermero' %></p>
                            <p class="card-text">Descripción: <%= solicitud.des_sol %></p>
                            <p class="card-text">Inicio: <%= new Date(solicitud.fecini_hor).toISOString().slice(0, 10) %></p>
                            <p class="card-text">Estado: <%= solicitud.est_sol %></p>
                            <a href="/solicitudes/detalle/<%= solicitud.id_sol %>" class="btn btn-light">Ver Detalles</a>
                        </div>
                        
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
