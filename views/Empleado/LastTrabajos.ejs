<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Anteriores Trabajos - Cuidamor</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      background-color: #f5f5f5;
    }
    .container {
      margin-top: 30px;
    }
    .card {
      margin-bottom: 20px;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }
    .card-header {
      background-color: #007bff;
      color: white;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-bottom: 2px solid #0056b3;
    }
    .card-body {
      text-align: left;
    }
    .work-info {
      text-align: left;
    }
    .components a {
      color: #333;
      padding: 10px;
      display: block;
      transition: 0.3s;
    }
    .components a:hover {
      background: #007bff;
      border-radius: 20px;
      color: #fff;
    }
    .components .dropdown-toggle::after {
      display: none;
    }
    .navbar {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .credit-info {
      text-align: center;
      margin-bottom: 20px;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <!-- Logo and name -->
      <a class="navbar-brand d-flex align-items-center" href="#">
        <img src="imgs/logo.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
        <span class="ms-2">Cuidamor</span>
      </a>

      <!-- Toggler for small screens -->
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Center options for large screens -->
      <div class="collapse navbar-collapse d-none d-lg-flex">
        <ul class="components navbar-nav mx-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/MenuEmpleado">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Vacantes">Vacantes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/TrabajosAnteriores">Trabajos Anteriores</a>
          </li>
        </ul>
        <ul class="components navbar-nav ms-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="<%= perfil.foto %>" alt="User Photo" width="30" height="30" class="rounded-circle">
              <span class="ms-2"><%= perfil.correo %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
              <li><a class="dropdown-item" href="/ConfiguracionDeCuneta">Configuración</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logOut">Cerrar sesión</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Offcanvas Menu -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
    <div class="offcanvas-header">
      <div class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="offcanvasAccountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="<%= perfil.foto %>" alt="User Photo" width="30" height="30" class="rounded-circle">
            <span class="ms-2"><%= perfil.correo %></span>
        </a>
        <ul class="components dropdown-menu" aria-labelledby="offcanvasAccountDropdown">
            <li><a class="dropdown-item" href="/ConfiguracionDeCuneta">Configuración</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/logOut">Cerrar sesión</a></li>
        </ul>
      </div>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <!-- Center options for small screens -->
      <ul class="components navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="/MenuEmpleado">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Vacantes">Vacantes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/TrabajosAnteriores">Trabajos Anteriores</a>
          </li>
      </ul>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container">
    <!-- Credits and Transfer Section -->
    <div class="credit-info">
      <p><strong>Créditos en la App:</strong> <%= perfil.credit %></p>
      <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#transferModal">Transferir a mi cuenta</button>
    </div>

    <!-- Previous Work Card Example (Paid) -->
    <% trabajos.forEach(trabajo => { %>
      <% if (trabajo.EstadoCobro === 'Pagado') { %>
        <div class="card">
          <div class="card-header">
            Trabajo Anterior
          </div>
          <div class="card-body work-info">
            <p><strong>Cliente:</strong> <%= trabajo.NombreCliente %> <%= trabajo.ApellidoPaternoCliente %> <%= trabajo.ApellidoMaternoCliente %></p>
            <p><strong>Descripción:</strong> <%= trabajo.DescripcionSolicitud %></p>
            <p><strong>Paga Final:</strong> $<%= trabajo.Costo %> MXN</p>
            <p><strong>Estado del Pago:</strong> <span class="text-success">Pago Cobrado</span></p>
          </div>
        </div>
      <% } %>
    <% }); %>

    <!-- Previous Work Card Example (Pending Payment) -->
    <% trabajos.forEach(trabajo => { %>
      <% if (trabajo.EstadoCobro !== 'Pagado') { %>
        <div class="card">
          <div class="card-header">
            Trabajo Anterior
          </div>
          <div class="card-body work-info">
            <p><strong>Cliente:</strong> <%= trabajo.NombreCliente %> <%= trabajo.ApellidoPaternoCliente %> <%= trabajo.ApellidoMaternoCliente %></p>
            <p><strong>Descripción:</strong> <%= trabajo.DescripcionSolicitud %></p>
            <p><strong>Paga Final:</strong> $<%= trabajo.Costo %> MXN</p>
            <p><strong>Estado del Pago:</strong> <span class="text-danger">Pago Pendiente</span></p>
            <a href="/AgregarCreditos?id=<%= trabajo.IDTrabajo %>" class="btn btn-primary">Cobrar</a>
          </div>
        </div>
      <% } %>
    <% }); %>
  </div>

  <!-- Transfer Modal -->
  <div class="modal fade" id="transferModal" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="transferModalLabel">Transferir Créditos</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="transferForm">
            <div class="mb-3">
              <label for="paypalEmail" class="form-label">Cuenta de PayPal de destino</label>
              <input type="email" class="form-control" id="paypalEmail" required>
            </div>
            <div class="mb-3">
              <label for="transferAmount" class="form-label">Monto de Transacción</label>
              <input type="number" class="form-control" id="transferAmount" required>
            </div>
            <div class="mb-3">
              <label for="userPassword" class="form-label">Contraseña de usuario de Cuidamor</label>
              <input type="password" class="form-control" id="userPassword" required>
            </div>
            <button type="submit" class="btn btn-primary">Transferir</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('transferForm').addEventListener('submit', function(event) {
      event.preventDefault();
      
      const email = document.getElementById('paypalEmail').value;
      const amount = document.getElementById('transferAmount').value;
      const password = document.getElementById('userPassword').value;
  
      fetch('/transferir', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ email, amount, password })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          Swal.fire({
            title: 'Éxito',
            text: 'Transferencia realizada con éxito',
            icon: 'success',
            confirmButtonText: 'OK'
          }).then(() => {
            location.reload();
          });
        } else {
          Swal.fire({
            title: 'Error',
            text: 'Error en la transferencia: ' + data.message,
            icon: 'error',
            confirmButtonText: 'OK'
          });
        }
      })
      .catch(error => {
        console.error('Error:', error);
        Swal.fire({
          title: 'Error',
          text: 'Error en la transferencia',
          icon: 'error',
          confirmButtonText: 'OK'
        });
      });
    });
  </script>
</body>
</html>
