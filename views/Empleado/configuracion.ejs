<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Configuración de Perfil - Cuidamor</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f5f5f5;
    }

    .container {
      margin-top: 30px;
    }

    .card {
      margin-bottom: 20px;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }

    .card-header {
      background-color: #007bff;
      color: white;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-bottom: 2px solid #0056b3;
    }

    .card-body {
      text-align: left;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .components a {
      color: #333;
      padding: 10px;
      display: block;
      transition: 0.3s;
    }

    .components a:hover {
      background: #007bff;
      border-radius: 20px;
      color: #fff;
    }

    .components .dropdown-toggle::after {
      display: none;
    }

    .navbar {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-photo {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 50%;
      margin-bottom: 10px;
    }

    .profile-photo-section {
      text-align: center;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
    }

    .btn-upload {
      margin-top: 10px;
    }
  </style>
  <script>
    function previewImage(event) {
      var reader = new FileReader();
      reader.onload = function() {
        var output = document.getElementById('profilePhotoPreview');
        output.src = reader.result;
      }
      reader.readAsDataURL(event.target.files[0]);
    }
  </script>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <!-- Logo and name -->
      <a class="navbar-brand d-flex align-items-center" href="#">
        <img src="imgs/logo.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
        <span class="ms-2">Cuidamor</span>
      </a>

      <!-- Toggler for small screens -->
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Center options for large screens -->
      <div class="collapse navbar-collapse d-none d-lg-flex">
        <ul class="components navbar-nav mx-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/MenuEmpleado">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Vacantes">Vacantes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/TrabajosAnteriores">Trabajos Anteriores</a>
          </li>
        </ul>
        <ul class="components navbar-nav ms-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="https://via.placeholder.com/150" alt="User Photo" width="30" height="30" class="rounded-circle">
              <span class="ms-2">correo@example.com</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
              <li><a class="dropdown-item" href="/ConfiguracionDeCuneta">Configuración</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logOut">Cerrar sesión</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Offcanvas Menu -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
    <div class="offcanvas-header">
      <div class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="offcanvasAccountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="https://via.placeholder.com/150" alt="User Photo" width="30" height="30" class="rounded-circle">
          <span class="ms-2">correo@example.com</span>
        </a>
        <ul class="components dropdown-menu" aria-labelledby="offcanvasAccountDropdown">
          <li><a class="dropdown-item" href="/ConfiguracionDeCuneta">Configuración</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="/logOut">Cerrar sesión</a></li>
        </ul>
      </div>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <!-- Center options for small screens -->
      <ul class="components navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/MenuEmpleado">Inicio</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Vacantes">Vacantes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/TrabajosAnteriores">Trabajos Anteriores</a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container">
    <!-- Profile Photo Section -->
    <div class="profile-photo-section">
        <div>
            <img src="https://via.placeholder.com/150" alt="User Photo" class="profile-photo mb-3">
        </div>
        <div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changePhotoModal">Cambiar</button>
        </div>
    </div>

    <!-- Personal Information Section -->
    <div class="card">
      <div class="card-header">
        Información Personal
      </div>
      <div class="card-body">
        <form>
          <div class="form-group">
            <label for="firstName">Nombre</label>
            <input type="text" class="form-control" id="firstName" placeholder="Nombre" value="Juan">
          </div>
          <div class="form-group">
            <label for="middleName">Apellido Materno</label>
            <input type="text" class="form-control" id="middleName" placeholder="Apellido Materno" value="Pérez">
          </div>
          <div class="form-group">
            <label for="lastName">Apellido Paterno</label>
            <input type="text" class="form-control" id="lastName" placeholder="Apellido Paterno" value="García">
          </div>
          <div class="form-group">
            <label for="email">Correo Electrónico</label>
            <input type="email" class="form-control" id="email" placeholder="Correo Electrónico" value="correo@example.com">
          </div>
          <div class="form-group">
            <label for="currentPassword">Contraseña Actual</label>
            <input type="password" class="form-control" id="currentPassword" placeholder="Contraseña Actual">
          </div>
          <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </form>
      </div>
    </div>

    <!-- Change Password Section -->
    <div class="card">
      <div class="card-header">
        Cambiar Contraseña
      </div>
      <div class="card-body">
        <form>
          <div class="form-group">
            <label for="currentPassword">Contraseña Actual</label>
            <input type="password" class="form-control" id="currentPassword" placeholder="Contraseña Actual">
          </div>
          <div class="form-group">
            <label for="newPassword">Nueva Contraseña</label>
            <input type="password" class="form-control" id="newPassword" placeholder="Nueva Contraseña">
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirmar Nueva Contraseña</label>
            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirmar Nueva Contraseña">
          </div>
          <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal for Changing Profile Photo -->
  <div class="modal fade" id="changePhotoModal" tabindex="-1" aria-labelledby="changePhotoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="changePhotoModalLabel">Cambiar Foto de Perfil</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <img src="https://via.placeholder.com/150" alt="User Photo" id="profilePhotoPreview" class="profile-photo mb-3">
          <form>
            <div class="form-group">
              <label for="newProfilePhoto">Subir nueva foto de perfil</label>
              <input type="file" class="form-control-file" id="newProfilePhoto" onchange="previewImage(event)">
            </div>
            <button type="submit" class="btn btn-primary btn-upload">Guardar Foto</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
