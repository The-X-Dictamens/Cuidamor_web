<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Administración de Tickets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Administración de Tickets</h2>
        <div class="row">
            <div class="col-md-12">
                <h3>Prioridad Alta</h3>
                <ul class="list-group">
                    <% tickets.filter(ticket => ticket.prioridad === 'Alta').forEach(ticket => { %>
                        <li class="list-group-item">
                            <strong>ID:</strong> <%= ticket.id_ticket %> - 
                            <strong>Descripción:</strong> <%= ticket.descripcion %> - 
                            <strong>Estado:</strong> <%= ticket.estatus %> - 
                            <a href="/tickets/<%= ticket.id_ticket %>" class="btn btn-info btn-sm">Ver Detalles</a>
                        </li>
                    <% }) %>
                </ul>
                <h3>Prioridad Media</h3>
                <ul class="list-group">
                    <% tickets.filter(ticket => ticket.prioridad === 'Media').forEach(ticket => { %>
                        <li class="list-group-item">
                            <strong>ID:</strong> <%= ticket.id_ticket %> - 
                            <strong>Descripción:</strong> <%= ticket.descripcion %> - 
                            <strong>Estado:</strong> <%= ticket.estatus %> - 
                            <a href="/tickets/<%= ticket.id_ticket %>" class="btn btn-info btn-sm">Ver Detalles</a>
                        </li>
                    <% }) %>
                </ul>
                <h3>Prioridad Baja</h3>
                <ul class="list-group">
                    <% tickets.filter(ticket => ticket.prioridad === 'Baja').forEach(ticket => { %>
                        <li class="list-group-item">
                            <strong>ID:</strong> <%= ticket.id_ticket %> - 
                            <strong>Descripción:</strong> <%= ticket.descripcion %> - 
                            <strong>Estado:</strong> <%= ticket.estatus %> - 
                            <a href="/tickets/<%= ticket.id_ticket %>" class="btn btn-info btn-sm">Ver Detalles</a>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
