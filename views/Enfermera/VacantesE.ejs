    <body>
        

     <div class="container mt-5">
        <h1>Solicitudes disponibles</h1>
        <div class="row">
            <% solicitudes.forEach(function(solicitud) { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <% /* Aquí podrías poner una imagen relevante */ %>
                        <img src="imagen_placeholder.jpg" class="card-img-top" alt="Imagen representativa">
                        <div class="card-body">
                            <h5 class="card-title">Solicitud <%= solicitud.id_sol %></h5>
                            <p class="card-text">Tipo: <%= solicitud.tipo_sol === 'cuid' ? 'Cuidador' : 'Enfermero' %></p>

                            <p class="card-text">Descripción: <%= solicitud.des_sol %></p>
                            <p class="card-text">Inicio: <%= solicitud.fecini_hor.toISOString().slice(0, 10) %></p>
                            <a href="/solicitudes/detalle/<%= solicitud.id_sol %>" class="btn btn-primary">Ver Detalles</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Contáctanos -->
    <div class="container mt-5">
      <h2 style="text-align: center;">Contáctanos</h2>
      <form>
          <div class="form-row">
              <div class="form-group col-md-6">
                  <label for="inputName">Nombre</label>
                  <input type="text" class="form-control" id="inputName" placeholder="Nombre">
              </div>
              <div class="form-group col-md-6">
                  <label for="inputEmail">Correo Electrónico</label>
                  <input type="email" class="form-control" id="inputEmail" placeholder="Correo Electrónico">
              </div>
          </div>
          <div class="form-group">
              <label for="inputMessage">Mensaje</label>
              <textarea class="form-control" id="inputMessage" rows="4" placeholder="Escribe tu mensaje aquí"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Enviar</button>
      </form>
    </div>

